{
    "sdk_ver": "2.1",
    
    "__comment_duid":"Your Device's name",
    "duid": "",

    "_comment_cpid": "CPID from portal's Key Vault",
    "cpid": "",

    "_comment_env" : "Environment from portal's Key Vault",
    "env": "",

    "_comment_iotc_server_cert":"Path to Global root cert, different depending on AWS/Azure instance",
    "iotc_server_cert": "/etc/ssl/certs/DigiCert_Global_Root_G2.pem",

    "_comment_sdk_id": "'SDK Identities -> Language: Python **, Version: 1.0' from portal's Key Vault",
    "sdk_id": "",
    
    "_comment_discovery_url": "depending on the url, it will connect to either Azure or AWS instance",
    "discovery_url": "",
    
    "auth": {
        "auth_type": "IOTC_AT_X509",
            "params": {
                "client_key": "/usr/iotc/local/certs/device.key",
                "client_cert": "/usr/iotc/local/certs/DeviceCertificate.pem"
        }
    },
    "device": {
        "commands_list_path": "/usr/iotc/app/scripts",
        "offline_storage": {
            "available_space_MB": 1,
            "file_count": 1
        },
        "attributes": [
            {
                "name": "power",
                "private_data": "/usr/iotc/app/dummy_sensor_power",
                "private_data_type": "ascii"
            },
            {
                "name": "level",
                "private_data": "/usr/iotc/app/dummy_sensor_level",
                "private_data_type": "ascii"
            }
        ]
    }
}
